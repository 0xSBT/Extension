{
  "manifest_version": 3,
  "name": "DA0xSBT Extension",
  "description": "Extension bridging DA0xSBT to Twitter",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_title": "ooak extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "soul-16.png",
      "32": "soul-32.png",
      "128": "soul-128.png"
    }
  },
  "icons": {
    "16": "soul-16.png",
    "32": "soul-32.png",
    "64": "soul-64.png",
    "128": "soul-128.png"
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "RussoOne-Regular.ttf",
        "Unbounded-Bold.ttf",
        "Unbounded-Medium.ttf"
      ],
      "matches": [
        "https://*.twitter.com/*"
      ]
    }
  ]
}